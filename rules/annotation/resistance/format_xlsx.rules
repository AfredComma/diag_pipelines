rule convert_tsv_to_xlsx:
    conda:
        pipeline_path + "envs/pandas-openpyxl-pronto-xlrd.yaml"
    input:
        tsv = "samples/{sample}/resistance/{software}.tsv",
    output:
        xlsx = "samples/{sample}/resistance/{software,[a-z]+}.xlsx",
    script:
        "scripts/convert_tsv_to_xlsx.py"
        

