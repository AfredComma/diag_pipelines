rule index_reference_fasta:
    conda:
        "../../envs/bwa-samtools.yaml"
    input:
        "{any_genome}.fasta"
    output:
        "{any_genome}.fasta.fai",
        "{any_genome}.fasta.bwt",
    log:
        logging_folder+"/{any_genome}.txt"
    shell:
        """
        samtools faidx {input[0]} &> {log}
        bwa index {input[0]} &>> {log}
        """

rule index_bam_file:
    conda:
        "../../envs/bwa-samtools.yaml"
    input:
        "{any_bam}.bam"
    output:
        temp("{any_bam}.bam.bai"),
    shell:
        """
        samtools index {input[0]}
        """
