rule calculate_distance_paired_reads_with_refseq_genomes_with_mash:
    conda:
        "../../envs/mash.yaml"
    input:
        "references/mash_sketch.msh",
        "samples/{sample}/reads/raw/{sample}_R1.fastq",
        "samples/{sample}/reads/raw/{sample}_R2.fastq",
    output:
        "samples/{sample}/contamination/mash/distances.tsv"
    shell:
        """
        cat {input[1]} {input[2]} | mash screen -w  {input[0]} - > {output[0]}
        """

