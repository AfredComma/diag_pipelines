rule multiqc_all:
    input:
        expand("strains/{sample}/multiqc/log.txt", sample = read_naming.keys())
    output:
        "quality/multiqc_report.html"
    shell:
        """
        docker run -v ${{PWD}}:/data/ multiqc sh -c 'multiqc -f -o /data/quality/ /data/strains/*/multiqc/ && chmod 666 /data/quality/multiqc_report.html'
        """
