rule download_sra_single:
    conda:
        pipeline_path + "envs/sra-tools.yaml"
    output:
        temp(link_directory + "{sample,[A-Za-z0-9]+}.fastq.gz"),
    shell:
        """
        fastq-dump --gzip --outdir $(dirname {output[0]}) --log-level 0 --disable-multithreading {wildcards.sample}
        """


rule download_sra_paired:
    conda:
        pipeline_path + "envs/sra-tools.yaml"
    output:
        temp(link_directory + "{sample,[A-Za-z0-9]+}_1.fastq.gz"),
        temp(link_directory + "{sample,[A-Za-z0-9]+}_2.fastq.gz"),
    shell:
        """
        fastq-dump --split-files --gzip --outdir $(dirname {output[0]}) --log-level 0 --disable-multithreading {wildcards.sample} 
        """




